<?xml version="1.0" encoding="UTF-8"?> 

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
		     version="2.5">
			 
<servlet>
	<servlet-name>Home</servlet-name>
	<servlet-class>IndexServlet</servlet-class>
	<init-param>
		<param-name>jsp</param-name>
		<param-value>/web/index.jsp</param-value>
	</init-param>
</servlet>

<servlet>
	<servlet-name>Search</servlet-name>
	<servlet-class>SearchServlet</servlet-class>
	<init-param>
		<param-name>jsp</param-name>
		<param-value>/web/search.jsp</param-value>
	</init-param>
</servlet>

<servlet>
	<servlet-name>List</servlet-name>
	<servlet-class>ListServlet</servlet-class>
	<init-param>
		<param-name>jsp</param-name>
		<param-value>/web/list.jsp</param-value>
	</init-param>
</servlet>

<servlet>
	<servlet-name>Details</servlet-name>
	<servlet-class>DetailsServlet</servlet-class>
	<init-param>
		<param-name>jsp</param-name>
		<param-value>/web/details.jsp</param-value>
	</init-param>
</servlet>

<servlet-mapping>
	<servlet-name>Home</servlet-name>
	<url-pattern>/</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>Search</servlet-name>
	<url-pattern>/search</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>List</servlet-name>
	<url-pattern>/list/</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>Details</servlet-name>
	<url-pattern>/router</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>default</servlet-name>
	<url-pattern>*.css</url-pattern>
</servlet-mapping>

</web-app>

