<?xml version="1.0" encoding="UTF-8"?> 

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
		     version="2.5">
			 
<context-param>
	<param-name>daoImp</param-name>
	<param-value>PsqlStatusDAO</param-value>
</context-param>
<context-param>
	<param-name>dbName</param-name>
    <param-value>torstatus</param-value>
</context-param>
<context-param>
	<param-name>dbUser</param-name>
	<param-value>mvitale</param-value>	
</context-param>
<context-param>
	<param-name>dbPass</param-name>
    <param-value>ernie</param-value>
</context-param>

<servlet>
	<servlet-name>Status Home</servlet-name>
	<servlet-class>Welcome</servlet-class>
	<init-param>
		<param-name>statusIndex</param-name>
		<param-value>/web/index.jsp</param-value>
	</init-param>
</servlet>

<servlet>
	<servlet-name>Search</servlet-name>
	<servlet-class>Search</servlet-class>
	<init-param>
		<param-name>searchJSP</param-name>
		<param-value>/web/searchResult.jsp</param-value>
	</init-param>
	<init-param>
		<param-name>onFail</param-name>
		<param-value>/web/technicalError.jsp</param-value>
	</init-param>
</servlet>

<servlet>
	<servlet-name>All Routers</servlet-name>
	<servlet-class>RouterList</servlet-class>
	<init-param>
		<param-name>allRouters</param-name>
		<param-value>/web/status.jsp</param-value>
	</init-param>
</servlet>

<servlet-mapping>
	<servlet-name>Status Home</servlet-name>
	<url-pattern>/</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>Search</servlet-name>
	<url-pattern>/search</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>All Routers</servlet-name>
	<url-pattern>/show-all-routers/</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>default</servlet-name>
	<url-pattern>*.css</url-pattern>
</servlet-mapping>

</web-app>

